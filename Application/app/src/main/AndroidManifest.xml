<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="glebshanshin.trashworld">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayActivity"
            android:label=".PlayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StoreActivity"
            android:label=".StoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AchievementsActivity"
            android:label=".AchievementsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:label=".SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StatisticsActivity"
            android:label=".StatisticsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LotteryActivity"
            android:label=".LotteryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LotteryStoreActivity"
            android:label=".LotteryStoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BonusActivity"
            android:label=".BonusActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QRScanActivity"
            android:label=".QRScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PromoActivity"
            android:label=".PromoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QRActivity"
            android:label=".QRActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StorageActivity"
            android:label=".StorageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicActivity"
            android:label=".MusicActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>