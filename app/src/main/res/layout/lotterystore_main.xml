<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/store"
    tools:context="glebshanshin.trashworld.LotteryStoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:background="@color/alpha1"
            android:onClick="toPlay" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_weight="1" />

            <io.gloxey.cfv.CFTextView
                android:id="@+id/TSH"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="           0"
                android:textColor="@color/blue"
                android:textSize="30sp"
                app:font_name="nyeti.ttf" />
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".StoreActivity">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:background="@drawable/bronzel" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <io.gloxey.cfv.CFTextView
                android:id="@+id/textman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="Случайное  TSH\nот 500 до 2К"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />

            <io.gloxey.cfv.CFTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:inputType="number"
                android:text="Цена: 1K TSH"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buybronze"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/butstore"
            android:onClick="buyBronze" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".StoreActivity">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:background="@drawable/silverl" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <io.gloxey.cfv.CFTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="Случайный предмет\n   из магазина"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />

            <io.gloxey.cfv.CFTextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:inputType="number"
                android:text="Цена: 10K TSH"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buysilver"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/butstore"
            android:onClick="buySilver" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".StoreActivity">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:background="@drawable/goldl" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <io.gloxey.cfv.CFTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="Случайное x2 TSH\n     за мусор"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />

            <io.gloxey.cfv.CFTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:inputType="number"
                android:text="Цена: 100К TSH"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/buygold"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/butstore"
            android:onClick="buyGold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
