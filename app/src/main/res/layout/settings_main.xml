<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".SettingsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/settingt" />

    <Button
        android:id="@+id/toMenu"
        android:background="@drawable/backbut1"
        android:onClick="toMenu"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="2.5%" />

    <Button
        android:id="@+id/toInfo"
        android:layout_alignParentEnd="true"
        android:background="@drawable/info"
        android:onClick="toInfo"
        app:layout_aspectRatio="100%"
        app:layout_heightPercent="10%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="2.5%" />

    <Space
        android:id="@+id/st"
        app:layout_heightPercent="28%"
        app:layout_widthPercent="100%" />

    <Button
        android:id="@+id/music"
        android:background="@color/alpha1"
        android:onClick="music"
        android:layout_below="@id/st"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="60%" />


    <Button
        android:id="@+id/statistics"
        android:layout_below="@id/music"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="60%"
        android:background="@color/alpha1"
        android:onClick="statistics" />


    <Button
        android:id="@+id/promo"
        android:layout_below="@id/statistics"
        android:layout_centerHorizontal="true"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="60%"
        android:background="@color/alpha1"
        android:onClick="promo" />


</android.support.percent.PercentRelativeLayout>