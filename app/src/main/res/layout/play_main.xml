<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emptypage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        app:layout_heightPercent="15%"
        app:layout_marginPercent="0.5%"
        android:src="@drawable/playt" />

    <LinearLayout
        android:orientation="horizontal"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%">

        <Button
            android:id="@+id/tomenu"
            android:layout_width="10dp"
            android:layout_height="97dp"
            android:layout_weight="1.2"
            android:background="@color/alpha1"
            android:onClick="toMenu" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_weight="1" />

            <io.gloxey.cfv.CFTextView
                android:id="@+id/TSH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="888M TSH"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="23dp"
                app:font_name="nyeti.ttf" />

            <io.gloxey.cfv.CFTextView
                android:id="@+id/TSHs"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="999M TSH за мусор"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />

        </LinearLayout>

        <Button
            android:id="@+id/tostore"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/alpha1"
            android:onClick="toStore" />
    </LinearLayout>

    <TextView
        android:id="@+id/notrecycle"
        android:layout_below="@+id/paper"
        android:layout_toEndOf="@+id/metal"
        android:background="@color/alpha1"
        android:tag="ele"
        app:layout_aspectRatio="60%"
        app:layout_marginBottomPercent="20%"
        app:layout_widthPercent="26%" />

    <TextView
        android:id="@+id/glass"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/notrecycle"
        android:background="@color/alpha1"
        android:tag="gla"
        app:layout_aspectRatio="60%"
        app:layout_marginBottomPercent="45%"
        app:layout_widthPercent="26%" />

    <TextView
        android:id="@+id/metal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/alpha1"
        android:tag="met"
        app:layout_aspectRatio="200%"
        app:layout_marginBottomPercent="62.5%"
        app:layout_widthPercent="42%" />

    <TextView
        android:id="@+id/organic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/alpha1"
        android:tag="org"
        app:layout_aspectRatio="200%"
        app:layout_marginBottomPercent="16%"
        app:layout_widthPercent="42%" />

    <TextView
        android:id="@+id/paper"
        android:layout_alignTop="@+id/glass"
        android:layout_toStartOf="@+id/metal"
        android:background="@color/alpha1"
        android:tag="pap"
        app:layout_aspectRatio="60%"
        app:layout_widthPercent="26%" />

    <TextView
        android:id="@+id/plastic"
        android:layout_alignBottom="@+id/notrecycle"
        android:layout_alignStart="@+id/paper"
        android:background="@color/alpha1"
        android:tag="pla"
        app:layout_aspectRatio="60%"
        app:layout_widthPercent="26%" />


    <ImageView
        android:id="@+id/circle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/playcircle"
        app:layout_aspectRatio="100%"
        app:layout_marginBottomPercent="17%"
        app:layout_marginPercent="5%"
        app:layout_widthPercent="100%" />

    <ImageView
        android:id="@+id/img"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/trash2"
        app:layout_aspectRatio="100%"
        app:layout_marginBottomPercent="33%"
        app:layout_widthPercent="40%" />

</android.support.percent.PercentRelativeLayout>