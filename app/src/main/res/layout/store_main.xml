<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/store"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">


        <ImageView
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:background="@drawable/man" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <io.gloxey.cfv.CFTextView
                android:id="@+id/textman"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="У вас сейчас\n   0/100"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />
            <io.gloxey.cfv.CFTextView
                android:id="@+id/text2man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                app:font_name="brody.ttf"
                android:text="Цена: "
                android:textColor="#000000"
                android:inputType="number" />

        </LinearLayout>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/butstore" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">


        <ImageView
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:background="@drawable/car"  />
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <io.gloxey.cfv.CFTextView
                android:id="@+id/textcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="У вас сейчас\n   0/100"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />
            <io.gloxey.cfv.CFTextView
                android:id="@+id/text2car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                app:font_name="brody.ttf"
                android:text="Цена: "
                android:textColor="#000000"
                android:inputType="number" />

        </LinearLayout>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/butstore" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">


        <ImageView
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:background="@drawable/robot" />
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <io.gloxey.cfv.CFTextView
                android:id="@+id/textrobot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="У вас сейчас\n   0/100"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />
            <io.gloxey.cfv.CFTextView
                android:id="@+id/text2robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                app:font_name="brody.ttf"
                android:text="Цена: "
                android:textColor="#000000"
                android:inputType="number" />

        </LinearLayout>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/butstore" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">


        <ImageView
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:background="@drawable/factory" />
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <io.gloxey.cfv.CFTextView
                android:id="@+id/textfactory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="У вас сейчас\n   0/100"
                android:textColor="#000000"
                android:textSize="20dp"
                app:font_name="brody.ttf" />
            <io.gloxey.cfv.CFTextView
                android:id="@+id/text2factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                app:font_name="brody.ttf"
                android:text="Цена: "
                android:textColor="#000000"
                android:inputType="number" />

        </LinearLayout>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/butstore" />
    </LinearLayout>
</LinearLayout>