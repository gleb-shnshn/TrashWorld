<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/store"
    android:orientation="vertical"
    tools:context=".StatisticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/alpha1"
            android:onClick="toSettings" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_weight="1" />

            <io.gloxey.cfv.CFTextView
                android:id="@+id/TSH"
                android:layout_width="204dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="@color/blue"
                android:textSize="30sp"
                app:font_name="nyeti.ttf" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/trashstat" />

        <io.gloxey.cfv.CFTextView
            android:id="@+id/trash"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:font_name="nyeti.ttf" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/organicstat" />

        <io.gloxey.cfv.CFTextView
            android:id="@+id/organic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:font_name="nyeti.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/mistakestat" />

        <io.gloxey.cfv.CFTextView
            android:id="@+id/mistake"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:font_name="nyeti.ttf" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/notrecyclestat" />

        <io.gloxey.cfv.CFTextView
            android:id="@+id/notrecycle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:font_name="nyeti.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/paperstat" />

        <io.gloxey.cfv.CFTextView
            android:id="@+id/paper"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:font_name="nyeti.ttf" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/glassstat" />

        <io.gloxey.cfv.CFTextView
            android:id="@+id/glass"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:font_name="nyeti.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/plasticstat" />

        <io.gloxey.cfv.CFTextView
            android:id="@+id/plastic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:font_name="nyeti.ttf" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/metalstat" />

        <io.gloxey.cfv.CFTextView
            android:id="@+id/metal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="25sp"
            app:font_name="nyeti.ttf" />
    </LinearLayout>

</LinearLayout>